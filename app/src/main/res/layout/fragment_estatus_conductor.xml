<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/estatusConductorContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.ismcenter.evataxiapp.Actividades.Choferes.EstatusConductorFragment">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<LinearLayout
    android:id="@+id/activity_estatus_conductor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    >

    <TextView
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/estatusConductor.edittex.cambioEstado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textTituloCambioEstado"
        android:layout_gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textColor="@color/secondary_text"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImagePerfil"
        android:layout_width="@dimen/perfil_image_size"
        android:layout_height="@dimen/perfil_image_size"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_perfil"
        app:border_color="@android:color/black"
        app:border_width="1dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_gravity="center" />

    <TextView
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/estatusConductor.edittex.nombreDelConductor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textTituloNombre"
        android:layout_gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textAlignment="center"/>

    <TextView
        android:text="Tipo de Carro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textCambioTipoCarro" />

    <TextView
        android:text="Placa del caro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:id="@+id/textCambioPlaca"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textAllCaps="true"/>

    <Switch
        android:id="@+id/switchEstado"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textOn="ON LINE"
        android:thumb="@drawable/customswitchselector"
        android:track="@drawable/custom_track"
        android:textOff="OFF LINE"
        android:textColor="@color/colorAccent"
        android:checked="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>

    <TextView
        android:text="@string/estatus.text.parrafo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:id="@+id/textParrafo"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:textStyle="bold"/>

</LinearLayout>
</ScrollView>
</android.support.design.widget.CoordinatorLayout>