<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.ismcenter.evataxiapp.Actividades.Choferes.PerfilConductorFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/perfilConductor">
    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <LinearLayout
            android:id="@+id/activity_estatus_conductor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="vertical"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imagePerfilConductor"
                android:layout_width="@dimen/perfil_image_size"
                android:layout_height="@dimen/perfil_image_size"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_perfil"
                app:border_color="@android:color/black"
                app:border_width="1dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="@string/estatusConductor.edittex.nombreDelConductor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textTituloNombre"
                android:layout_gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textAlignment="center"/>

            <TextView
                android:text="@string/estatusConductor.edittex.tipoDeUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/textTituloUsuario" />

            <EditText
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="@string/registro.edit.nombre"
                android:ems="10"
                android:id="@+id/editNombre"
                android:focusable="false"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="@string/registro.edit.ingrese_correo"
                android:ems="10"
                android:id="@+id/editCorreo"
                android:focusable="false"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="@string/registro.edit.ingrese_telefono"
                android:ems="10"
                android:id="@+id/editTelefono"
                android:focusable="false"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="@string/registro.edit.ingrese_direccion"
                android:ems="10"
                android:id="@+id/editDireccion"
                android:focusable="false"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="@string/estatusConductor.edittex.modeloDelCarro"
                android:ems="10"
                android:id="@+id/editModeloCarro"
                android:focusable="false"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="@string/estatusConductor.edittex.placa"
                android:ems="10"
                android:id="@+id/editPlacaCarro"
                android:focusable="false"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="@string/estatusConductor.edittex.color"
                android:ems="10"
                android:id="@+id/editColorCarro"
                android:focusable="false"/>
        </LinearLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>