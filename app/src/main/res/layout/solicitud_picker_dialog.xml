<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#ffffff"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:weightSum="1">

        <ImageView
            android:layout_width="139dp"
            android:layout_height="129dp"
            android:id="@+id/iv_icon"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_check_sol" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_titulo"
            android:layout_marginTop="18dp"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="Solicitud procesada con exito"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_linear"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:layout_weight="0.17">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_subTtitle"
                android:textSize="14dp"
                android:layout_gravity="center"
                android:text="Esperando confirmación del chófer" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/powered_by_google_light"
                android:visibility="gone"
                android:id="@+id/imageView" />


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/okTV1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:padding="10dp"
                android:text="Ok"
                android:textColor="@color/red" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/cancelTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:padding="10dp"
                android:visibility="invisible"
                android:text="Cancelar Solicitud"
                android:textColor="@color/red"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>