<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.ismcenter.evataxiapp.Actividades.Choferes.ServicioCanceladoFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/receptSolicitudAut">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/activity_estatus_conductor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="Tu Servicio Actual se ha cancelado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textTituloSolicitud"
                    android:layout_gravity="center"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textAlignment="center" />

                <EditText
                    android:paddingTop="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Numero del servicio: "
                    android:ems="10"
                    android:id="@+id/editIdServicio"
                    android:layout_margin="7dp"
                    android:focusable="false"/>

                <EditText
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Motivo: "
                    android:ems="10"
                    android:id="@+id/editNombrePasajero"
                    android:layout_margin="7dp"
                    android:focusable="false"
                    android:inputType="textMultiLine"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">

                    <Button
                        android:text="Volver"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnVolver"
                        android:padding="20dp"
                        android:background="@color/colorPrimary"
                        android:textColor="@color/primary_text"
                        android:textStyle="bold"
                        android:textSize="@dimen/botonInferior.textSize"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>