<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:background="@color/primary_light"
    android:id="@+id/containerDialogDetalle">


    <ImageView
        android:layout_width="139dp"
        android:layout_height="129dp"
        android:id="@+id/iv_icon"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_check_sol"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre de la zona:"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:id="@+id/tv_nombre"
        android:layout_above="@+id/tv_tipo"
        android:layout_alignLeft="@+id/tv_nombre"
        android:layout_alignStart="@+id/tv_nombre"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Origen:"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/tv_origen"
        android:layout_above="@+id/tv_tipo"
        android:layout_alignLeft="@+id/tv_nombre"
        android:layout_alignStart="@+id/tv_nombre"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destino:"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/tv_destino"
        android:layout_above="@+id/tv_tipo"
        android:layout_alignLeft="@+id/tv_nombre"
        android:layout_alignStart="@+id/tv_nombre"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Punto de referencia:"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/tv_punto"
        android:layout_above="@+id/tv_tipo"
        android:layout_alignLeft="@+id/tv_nombre"
        android:layout_alignStart="@+id/tv_nombre"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo de tarifa:"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/tv_tipo"
        android:layout_above="@+id/btSolicitar"
        android:layout_alignLeft="@+id/tv_zona"
        android:layout_alignStart="@+id/tv_zona"
        android:layout_marginBottom="20dp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tarifa:"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/tv_tarifa"
        android:layout_below="@+id/iv_icon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btSolicitar"
        android:text="@string/solicitar"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:layout_weight="0.00"
       />


</LinearLayout>