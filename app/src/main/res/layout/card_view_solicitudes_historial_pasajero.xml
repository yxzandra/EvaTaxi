<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    card_view:cardCornerRadius="2dp"
    card_view:contentPadding="8dp"
    card_view:cardElevation="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circle_image"
            android:layout_width="@dimen/perfil_image_size"
            android:layout_height="@dimen/perfil_image_size"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_perfil"
            app:border_color="@android:color/white"
            app:border_width="1dp"
            android:layout_gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <TextView
            android:text="Detalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_detalle"
            android:textColor="#f20505"
            android:visibility="invisible"
            android:layout_alignBottom="@+id/circle_image"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="13dp"
            android:layout_marginEnd="13dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/circle_image"
            android:layout_toEndOf="@+id/circle_image"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp">
            <TextView
                android:text="Respuesta Nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textRespuestaNombre"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/circle_image"
                android:layout_toEndOf="@+id/circle_image" />
            <TextView
                android:text="Respuesta Cedula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textRespuestaCedula"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/circle_image"
                android:layout_toEndOf="@+id/circle_image" />
            <TextView
                android:text="Respuesta id Servicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textResultadoServicio" />

        <TextView
            android:text="Resultado Fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textResultadoFechaServicio"
            android:layout_alignBottom="@+id/circle_image"
            android:layout_alignLeft="@+id/textResultadoServicio"
            android:layout_alignStart="@+id/textResultadoServicio" />
        </LinearLayout>


    </RelativeLayout>


</android.support.v7.widget.CardView>