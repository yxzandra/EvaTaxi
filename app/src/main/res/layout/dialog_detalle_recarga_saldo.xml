<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:background="@color/primary_light"
    android:id="@+id/containerDialogDetalle">



    <ImageView
        android:layout_width="139dp"
        android:layout_height="129dp"
        android:id="@+id/iv_icon"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_pago"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comprobante:"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/tv_comprobante"
        android:layout_above="@+id/tv_tipo"
        android:layout_alignLeft="@+id/tv_nombre"
        android:layout_alignStart="@+id/tv_nombre"
        android:layout_marginBottom="20dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha:"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/tv_fecha"
        android:layout_above="@+id/tv_tipo"
        android:layout_alignLeft="@+id/tv_nombre"
        android:layout_alignStart="@+id/tv_nombre"
        android:layout_marginBottom="20dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre:"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/tv_nombre"
        android:layout_above="@+id/btSolicitar"
        android:layout_alignLeft="@+id/tv_zona"
        android:layout_alignStart="@+id/tv_zona"
        android:layout_marginBottom="20dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cedula:"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/tv_cedula"
        android:layout_below="@+id/iv_icon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monto:"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/tv_monto"
        android:layout_below="@+id/iv_icon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btSolicitar"
        android:text="Aceptar"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:layout_weight="0.00"
       />


</LinearLayout>