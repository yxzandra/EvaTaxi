<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="2dp"
    card_view:contentPadding="20dp"
    card_view:cardElevation="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textNroServicio"
            android:text="Numero del servicio"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/primary_text"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textFecha"
            android:text="Fecha"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/primary_text"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/textNroServicio"/>

        <TextView
            android:text="Monto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:id="@+id/textMonto"
            android:layout_below="@+id/textFecha"
            android:textColor="@color/primary_text"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

        <TextView
            android:text="Id Servicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/textNroServicio"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/textRespuestaIdServicio" />

        <TextView
            android:text="Fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textRespuestaIdServicio"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/textFecha"
            android:id="@+id/textRespuestaFecha" />

        <TextView
            android:text="Monto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textResultadoMonto"
            android:layout_below="@+id/textRespuestaFecha"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/textMonto"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>