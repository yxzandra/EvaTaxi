<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/calificarContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.ismcenter.evataxiapp.Actividades.CalificarFragment">
    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tituloTipoUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Califica tu servicio"
            android:layout_marginTop="20dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="@color/secondary_text"
            android:layout_gravity="center"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageUsuario"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_perfil"
            app:border_color="@android:color/black"
            app:border_width="1dp"
            android:layout_margin="20dp"
            android:layout_gravity="center"/>

        <TextView
            android:text="Nombre del Conductor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textNombreUsuario"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="@color/primary_text"/>

        <TextView
            android:text="Modelo del carro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textCarro"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
            android:text="Placa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/texPlaca"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1.0"
            android:rating="1.0"
            android:layout_gravity="center"
            android:progressTint="@color/star"
            android:secondaryProgressTint="@android:color/transparent"
    />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:id="@+id/editComentarios"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:hint="DÃ©janos tu comentario sobre el servicio recibido"
            android:ems="10"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape_linear"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="calificar"
                android:id="@+id/button"
                android:padding="20dp"
                android:background="@color/colorPrimary"
                android:textColor="@color/primary_text"
                android:textStyle="bold"
                android:textSize="@dimen/botonInferior.textSize"
                android:layout_gravity="bottom"
                android:textAllCaps="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp" />
        </RelativeLayout>

    </LinearLayout>

    </ScrollView>

</android.support.design.widget.CoordinatorLayout>
